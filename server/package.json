{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend server for Student Portal Assessment",
  "main": "server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "dotenv -e .env.test jest",
    "test:watch": "dotenv -e .env.test jest --watch",
    "test:coverage": "dotenv -e .env.test jest --coverage",
    "test:integration": "dotenv -e .env.test jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "test:unit": "dotenv -e .env.test jest --testPathPattern=controllers|models|utils",
    "test:debug": "dotenv -e .env.test node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "express",
    "typescript",
    "mongodb",
    "student-portal"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "dotenv-cli": "^10.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.16.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
